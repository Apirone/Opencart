{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-apirone" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
              <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}

        {% if error %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body" style="font-size:14px;">
                <form action="{{ action }}" method="post" id="form-apirone" class="form-horizontal">
                <ul class="nav nav-tabs">
                    {% if settings_loaded %}
                    <li class="active"><a href="#tab-settings" data-toggle="tab"><i class="fa fa-cog"></i> {{ tab_settings }}</a></li>
                    <li><a href="#tab-currencies" data-toggle="tab"><i class="fa fa-bitcoin"></i> {{ tab_currencies }}</a></li>
                    <li><a href="#tab-statuses" data-toggle="tab"><i class="fa fa-check"></i> {{ tab_statuses }}</a></li>
                    {% endif %}
                    <li{% if not settings_loaded %} class="active"{% endif %}><a href="#tab-info" data-toggle="tab"><i class="fa fa-info-circle"></i> {{ tab_info }}</a></li>
                </ul>
                <div class="tab-content">
                    {% if settings_loaded %}
                    <div class="tab-pane active" id="tab-settings">
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-merchant">{{ entry_merchant }}</label>
                            <div class="col-lg-8">
                            <input type="text" name="apirone_mccp_merchant" value="{{ apirone_mccp_merchant }}" placeholder="{{ entry_merchant }}" id="input-merchant" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-testcustomer">{{ entry_testcustomer }}</label>
                            <div class="col-lg-8">
                                <input type="text" name="apirone_mccp_testcustomer" value="{{ apirone_mccp_testcustomer }}" placeholder="{{ entry_testcustomer_placeholder }}" id="input-testcustomer" class="form-control" />
                                <span class="contorl-label" style="margin-top: 4px; display: inline-block;">{{ text_test_currency_customer }}</span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-lg-4 control-label" for="input-timeout">{{ entry_timeout }}</label>
                            <div class="col-lg-8">
                                <input type="number" min="0" name="apirone_mccp_timeout" value="{{ apirone_mccp_timeout }}" placeholder="{{ entry_timeout }}" id="input-timeout" class="form-control" />
                                {% if errors.apirone_mccp_timeout %}
                                <div class=" text-danger">{{ errors.apirone_mccp_timeout }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-processing-fee">{{ entry_processing_fee }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_processing_fee" id="input-processing-fee" class="form-control">
                                    <option value="fixed"{{ apirone_mccp_processing_fee == 'fixed' ? ' selected' : '' }}>
                                        {{ text_processing_fee_fixed }}
                                    </option>
                                    <option value="percentage"{{ apirone_mccp_processing_fee == 'percentage' ? ' selected' : '' }}>
                                        {{ text_processing_fee_percentage }}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-with-fee">
                                <span data-toggle="tooltip" data-original-title="{{ text_with_fee_tooltip }}">{{ entry_with_fee }}</span>
                            </label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_with_fee" id="input-with-fee" class="form-control">
                                    {% if apirone_mccp_with_fee %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label class="col-lg-4 control-label" for="input-factor">
                                <span data-toggle="tooltip" data-original-title="{{ text_factor_tooltip }}">{{ entry_factor }}</span>
                            </label>
                            <div class="col-lg-8">
                                <input name="apirone_mccp_factor" type="number" min="0.01" step='0.01' value="{{ apirone_mccp_factor }}" id="input-factor" class="form-control" />
                                {% if errors.apirone_mccp_factor %}
                                <div class=" text-danger">{{ errors.apirone_mccp_factor }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-logo">
                                <span data-toggle="tooltip" data-original-title="{{ text_logo_tooltip }}">{{ entry_logo }}</span>
                            </label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_logo" id="input-logo" class="form-control">
                                    {% if apirone_mccp_logo %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-debug">{{ entry_debug }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_debug" id="input-debug" class="form-control">
                                    {% if apirone_mccp_debug %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_geo_zone_id" id="input-geo-zone" class="form-control">
                                    <option value="0">{{ text_all_zones }}</option>
                                    {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id == apirone_mccp_geo_zone_id %}
                                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                    {% else %}
                                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                    {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_status" id="input-status" class="form-control">
                                    {% if apirone_mccp_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                            <div class="col-lg-8">
                                <input type="number" min="0" name="apirone_mccp_sort_order" value="{{ apirone_mccp_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-currencies">
                        {% for network, network_dto in networks %}
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="address_{{ network }}">
                                <span data-toggle="tooltip" data-original-title="{{ network_dto.tooltip }}" syle="padding:10px 0;">{{ network_dto.name }}</span>
                            </label>
                            <div class="col-lg-8">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <img src="view/image/payment/apirone/currencies/{{ network_dto.icon }}.svg" width="18">
                                    </span>
                                    <input type="text" name="address[{{ network }}]" value="{{ network_dto.address }}" id="address_{{ network }}" class="form-control" style="height:38px;"/>
                                </div>
                                {% if network_dto.error %}
                                <div class=" text-danger">{{ currency_address_incorrect }}</div>
                                {% endif %}
                                {% if network_dto.testnet %}
                                <label class="control-label" style="color: inherit !important;"><span data-toggle="tooltip" data-original-title="{{ network_dto.test_tooltip }}">{{ text_test_currency }}</span></label>
                                {% endif %}
                                {% if network_dto.tokens %}
                                {% for abbr, token_dto in network_dto.tokens %}
                                <div class="col-lg-8">
                                    <input class="checkbox-inline" style="margin-inline-end:4px;" type="checkbox" name="visible[{{ abbr }}]" checked="{{ token_dto.state }}" value="{{ token_dto.state }}" id="{{ token_dto.checkbox_id }}" class="form-control" />
                                    <label class="control-label" for="{{ token_dto.checkbox_id }}">
                                        <img src="view/image/payment/apirone/currencies/{{ token_dto.icon }}.svg" width="18">
                                        <span data-toggle="tooltip" data-original-title="{{ token_dto.tooltip }}" style="font-size:12px;padding-left:4px;">{{ token_dto.name }}</span>
                                    </label>
                                </div>
                                {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="tab-pane" id="tab-statuses">
                        {% for apirone_status, oc_status_id in apirone_mccp_invoice_status_ids %}
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="input-invoice-status-{{ apirone_status }}">{{ apirone_status_labels[apirone_status] }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_invoice_{{ apirone_status }}_status_id" id="input-invoice-status-{{ apirone_status }}" class="form-control">
                                    {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == oc_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                    <div class="tab-pane{% if not settings_loaded %} active{% endif %}" id="tab-info">
                        <div style="padding: 1rem 0; margin-bottom: 1rem">
                            <h4>{{ heading_testnet_hint }}</h4>
                            <hr>
                            <p>{{ text_testnet_hint }}</p>
                            <a target="_blank" href="https://coinfaucet.eu/en/btc-testnet/?lid=apirone">Coinfaucet</a><br>
                            <a target="_blank" href="https://bitcoinfaucet.uo1.net?lid=apirone">Bitcoinfaucet</a><br>
                            <a target="_blank" href="https://testnet-faucet.com/btc-testnet/?lid=apirone">Testnet faucet</a><br>
                            <a target="_blank" href="https://kuttler.eu/en/bitcoin/btc/faucet/?lid=apirone">Kuttler</a>
                            <hr>
                            <p class="mb-0"><strong>{{ text_read_more }}:</strong> <a href="https://apirone.com/faq" target="_blank">https://apirone.com/faq</a></p>
                        </div>
                        <div style="padding: 1rem 0; margin-bottom: 1rem">
                            <h4>{{ heading_plugin_info }}</h4>
                            <hr>
                            <p>
                                <strong>{{ text_apirone_account }}:</strong> {{ apirone_mccp_account }}<br/>
                                <strong>{{ text_plugin_version }}:</strong> {{ apirone_mccp_version }}<br/>
                                <strong>{{ text_php_version }}:</strong> {{ phpversion }}<br/>
                                <strong>{{ text_oc_version }}</strong>: {{ oc_version }}<br/>
                            </p>
                            <hr>
                            <p class="mb-0"><strong>{{ text_apirone_support }}:</strong> <a href="mailto:support@apirone.com">support@apirone.com</a></p>
                        </div>
                    </div>
                </div>
            </form>
            </div>
            <div class="panel-footer">{{ text_apirone_survey }}</div>
        </div>
    </div>
</div>
{{ footer }}
