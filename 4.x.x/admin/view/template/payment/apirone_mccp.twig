{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <button type="submit" form="form-apirone" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-header"><i class="fa fa-pencil"></i> {{ text_edit }}</div>
            <div class="card-body" style="font-size:14px;color:#545454">
                <form action="{{ save }}" method="post" id="form-apirone" class="form-horizontal" data-oc-toggle="ajax">
                <ul class="nav nav-tabs">
                    {% if settings_loaded %}
                    <li class="nav-item" role="presentatin"><a href="#tab-settings" data-bs-toggle="tab" class="nav-link active" aria-selected="true" role="tab"><i class="fa fa-cog"></i> {{ tab_settings }}</a></li>
                    <li class="nav-item" role="presentatin"><a href="#tab-currencies" data-bs-toggle="tab" class="nav-link" aria-selected="true" role="tab"><i class="fa fa-bitcoin-sign"></i> {{ tab_currencies }}</a></li>
                    <li class="nav-item" role="presentatin"><a href="#tab-statuses" data-bs-toggle="tab" class="nav-link" aria-selected="true" role="tab"><i class="fa fa-check"></i> {{ tab_statuses }}</a></li>
                    {% endif %}
                    <li class="nav-item" role="presentatin"><a href="#tab-info" data-bs-toggle="tab" class="nav-link{% if not settings_loaded %} active"{% endif %}" aria-selected="true" role="tab"><i class="fa fa-info-circle"></i> {{ tab_info }}</a></li>
                </ul>
                <style>
                    label>span[data-bs-toggle="tooltip"]:after {
                        font-family: FontAwesome;
                        color: #1E91CF;
                        content: "\f059";
                        margin-left: 4px;
                    }
                    .input-group-addon {
                        padding: 8px 13px;
                        font-size: 13px;
                        font-weight: normal;
                        line-height: 1;
                        color: #555;
                        text-align: center;
                        background-color: #eee;
                        border: 1px solid #ccc;
                        border-radius: 3px;
                    }
                    .token-checkbox>span {
                        position: relative;
                        padding-inline-start: 15px;
                    }
                    .token-checkbox>span>input {
                        position: relative;
                        top: 3px;
                        margin-inline-end: 4px;
                    }
                    .token-checkbox>label {
                        padding-bottom: 0;
                    }
                </style>
                <div class="tab-content">
                    {% if settings_loaded %}
                    <div class="tab-pane active" id="tab-settings" role="tabpanel">
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-merchant">{{ entry_merchant }}</label>
                            <div class="col-lg-8">
                            <input type="text" name="apirone_mccp_merchant" value="{{ apirone_mccp_merchant }}" placeholder="{{ entry_merchant }}" id="input-merchant" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-testcustomer">{{ entry_testcustomer }}</label>
                            <div class="col-lg-8">
                                <input type="text" name="apirone_mccp_testcustomer" value="{{ apirone_mccp_testcustomer }}" placeholder="{{ entry_testcustomer_placeholder }}" id="input-testcustomer" class="form-control" />
                                <span class="contorl-label" style="margin-top: 4px; display: inline-block;">{{ text_test_currency_customer }}</span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label class="col-lg-4 col-form-label" for="input-timeout">{{ entry_timeout }}</label>
                            <div class="col-lg-8">
                                <input type="number" min="0" name="apirone_mccp_timeout" value="{{ apirone_mccp_timeout }}" placeholder="{{ entry_timeout }}" id="input-timeout" class="form-control" />
                                <div id="error-timeout" class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-processing-fee">{{ entry_processing_fee }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_processing_fee" id="input-processing-fee" class="form-control">
                                    <option value="fixed"{{ apirone_mccp_processing_fee == 'fixed' ? ' selected' : '' }}>
                                        {{ text_processing_fee_fixed }}
                                    </option>
                                    <option value="percentage"{{ apirone_mccp_processing_fee == 'percentage' ? ' selected' : '' }}>
                                        {{ text_processing_fee_percentage }}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-with-fee">
                                <span data-bs-toggle="tooltip" data-bs-original-title="{{ text_with_fee_tooltip }}">{{ entry_with_fee }}</span>
                            </label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_with_fee" id="input-with-fee" class="form-control">
                                    {% if apirone_mccp_with_fee %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label class="col-lg-4 col-form-label control-label" for="input-factor">
                                <span data-bs-toggle="tooltip" data-bs-original-title="{{ text_factor_tooltip }}">{{ entry_factor }}</span>
                            </label>
                            <div class="col-lg-8">
                                <input name="apirone_mccp_factor" type="number" min="0.01" step='0.01' value="{{ apirone_mccp_factor }}" id="input-factor" class="form-control" />
                                <div id="error-factor" class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-logo">
                                <span data-bs-toggle="tooltip" data-bs-original-title="{{ text_logo_tooltip }}">{{ entry_logo }}</span>
                            </label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_logo" id="input-logo" class="form-control">
                                    {% if apirone_mccp_logo %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-debug">{{ entry_debug }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_debug" id="input-debug" class="form-control">
                                    {% if apirone_mccp_debug %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_geo_zone_id" id="input-geo-zone" class="form-control">
                                    <option value="0">{{ text_all_zones }}</option>
                                    {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id == apirone_mccp_geo_zone_id %}
                                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                    {% else %}
                                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                    {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_status" id="input-status" class="form-control">
                                    {% if apirone_mccp_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-sort-order">{{ entry_sort_order }}</label>
                            <div class="col-lg-8">
                                <input type="number" min="0" name="apirone_mccp_sort_order" value="{{ apirone_mccp_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-currencies" role="tabpanel">
                        {% for network, network_dto in networks %}
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="address_{{ network }}">
                                <span data-bs-toggle="tooltip" data-bs-original-title="{{ network_dto.tooltip }}" syle="padding:10px 0;">{{ network_dto.name }}</span>
                            </label>
                            <div class="col-lg-8">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <img src="../extension/apirone/admin/view/image/payment/currencies/{{ network_dto.icon }}.svg" width="18">
                                    </span>
                                    <input type="text" name="address[{{ network }}]" value="{{ network_dto.address }}" id="address_{{ network }}" class="form-control" style="height:38px;"/>
                                </div>
                                <div id="error-address-{{ network }}" class="invalid-feedback"></div>
                                {% if network_dto.testnet %}
                                <label class="col-form-label" style="color: inherit !important;"><span data-bs-toggle="tooltip" data-bs-original-title="{{ network_dto.test_tooltip }}">{{ text_test_currency }}</span></label>
                                {% endif %}
                                {% if network_dto.tokens %}
                                {% for abbr, token_dto in network_dto.tokens %}
                                <div class="col-lg-8 token-checkbox">
                                    <span><input class="checkbox-inline" type="checkbox" name="visible[{{ abbr }}]" checked="{{ token_dto.state }}" value="{{ token_dto.state }}" id="{{ token_dto.checkbox_id }}" class="form-control" /></span>
                                    <label class="col-form-label" for="{{ token_dto.checkbox_id }}">
                                        <img src="../extension/apirone/admin/view/image/payment/currencies/{{ token_dto.icon }}.svg" width="18">
                                        <span data-bs-toggle="tooltip" data-bs-original-title="{{ token_dto.tooltip }}" style="font-size:12px;padding-left:4px;">{{ token_dto.name }}</span>
                                    </label>
                                </div>
                                {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="tab-pane" id="tab-statuses" role="tabpanel">
                        {% for apirone_status, oc_status_id in apirone_mccp_invoice_status_ids %}
                        <div class="row mb-3">
                            <label class="col-lg-4 col-form-label" for="input-invoice-status-{{ apirone_status }}">{{ apirone_status_labels[apirone_status] }}</label>
                            <div class="col-lg-8">
                                <select name="apirone_mccp_invoice_{{ apirone_status }}_status_id" id="input-invoice-status-{{ apirone_status }}" class="form-control">
                                    {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == oc_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                    <div class="tab-pane{% if not settings_loaded %} active{% endif %}" id="tab-info" role="tabpanel">
                        <div style="padding: 1rem 0; margin-bottom: 1rem">
                            <h4>{{ heading_testnet_hint }}</h4>
                            <hr>
                            <p>{{ text_testnet_hint }}</p>
                            <a target="_blank" href="https://coinfaucet.eu/en/btc-testnet/?lid=apirone">Coinfaucet</a><br>
                            <a target="_blank" href="https://bitcoinfaucet.uo1.net?lid=apirone">Bitcoinfaucet</a><br>
                            <a target="_blank" href="https://testnet-faucet.com/btc-testnet/?lid=apirone">Testnet faucet</a><br>
                            <a target="_blank" href="https://kuttler.eu/en/bitcoin/btc/faucet/?lid=apirone">Kuttler</a>
                            <hr>
                            <p class="mb-0"><strong>{{ text_read_more }}:</strong> <a href="https://apirone.com/faq" target="_blank">https://apirone.com/faq</a></p>
                        </div>
                        <div style="padding: 1rem 0; margin-bottom: 1rem">
                            <h4>{{ heading_plugin_info }}</h4>
                            <hr>
                            <p>
                                <strong>{{ text_apirone_account }}:</strong> {{ apirone_mccp_account }}<br/>
                                <strong>{{ text_plugin_version }}:</strong> {{ apirone_mccp_version }}<br/>
                                <strong>{{ text_php_version }}:</strong> {{ phpversion }}<br/>
                                <strong>{{ text_oc_version }}</strong>: {{ oc_version }}<br/>
                            </p>
                            <hr>
                            <p class="mb-0"><strong>{{ text_apirone_support }}:</strong> <a href="mailto:support@apirone.com">support@apirone.com</a></p>
                        </div>
                    </div>
                </div>
            </form>
            </div>
            <div class="card-footer text-muted">{{ text_apirone_survey }}</div>
        </div>
    </div>
</div>
{{ footer }}
