{% if error_message == false %}
<form id="mccp-form" class="form form-horizontal">
    <input type="hidden" name="order_id" value="{{ order_id }}">
    <fieldset id="payment">
        <legend>{{ payment_details }}</legend>
        <div class="form-group">
            <div class="col-sm-12">
            {{ pay_message }}
            {{ selector }}
            </div>
        </div>
    </fieldset>
    <div class="buttons">
        <div class="pull-right">
            <button type="button" id="button-confirm" onclick="mccpConfirm(event)" class="btn btn-primary">{{ button_confirm }}</button>
        </div>
    </div>
</form>
{% else %}
    <div class="buttons"><div class="alert alert-danger" role="alert">{{ error_message }} </div></div>
{% endif %}

<script type="text/javascript">
    function mccpConfirm(event) {
        event.preventDefault();
        currency = $('#mccp-currency');
        if (currency !== 'undefined' && currency.val() !== '') {
            location = '{{url_redirect}}&currency='+$('#mccp-currency').val()+'&key={{order_key}}&order={{order_id}}';
        }

    }
</script>
